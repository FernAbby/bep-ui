{
  "include": ["./**/*.ts", "./**/*.vue"],
  "exclude": ["./node_modules", "package.json", "tsconfig.json"],
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "@bep-ui/*": ["./*"]
    }
  }
}
