{
  "name": "bep-ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:bep-ui": "run-p type-check \"build-only:bep-ui {@}\" --",
    "build:gadget": "run-p type-check:gadget \"build-only:gadget {@}\" --",
    "build:libs": "build:bep-ui build:gadget",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "build-only:bep-ui": "cross-env LIB_NAME=bep-ui vite build",
    "build-only:gadget": "cross-env LIB_NAME=gadget vite build",
    "type-check:gadget": "vue-tsc --project packages/gadget/tsconfig.json",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint --ext .ts,.tsx,.vue .",
    "lint:style": "stylelint \"**/*.{scss,css}\"",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "element-plus": "^2.7.3",
    "pinia": "^2.1.7",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@lints-config/commitlint-config-common": "^1.0.3",
    "@lints-config/eslint-config-vue-ts": "^1.0.2",
    "@lints-config/stylelint-config-scss": "^0.1.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.12.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/test-utils": "^2.4.5",
    "@vue/tsconfig": "^0.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "sass": "^1.77.2",
    "stylelint": "^16.5.0",
    "typescript": "5.3.3",
    "vite": "^5.2.8",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-vue-devtools": "^7.0.25",
    "vitest": "^1.4.0",
    "vue-tsc": "^2.0.11"
  },
  "lint-staged": {
    "**/*.{.vue,ts,tsx,js,jsx}": [
      "eslint"
    ],
    "**/*.{scss,less,css}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "**/*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ]
  },
  "packageManager": "pnpm@7.15.0",
  "engines": {
    "node": ">=16.14.0"
  }
}
